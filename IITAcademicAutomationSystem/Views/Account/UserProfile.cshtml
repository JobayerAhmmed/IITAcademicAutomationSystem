@model IITAcademicAutomationSystem.Models.UserProfileViewModel

@{
    ViewBag.Title = "Profile";
}

<section class="content-header">
    <h1>
        <small>Profile of</small> @Model.FullName
    </h1>
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink(" Home", "Index", "Home", new { area = "" }, new { @class = "fa fa-home" })
        </li>
        <li class="active">
            Profile
        </li>
    </ol>
</section>
<hr />
<section class="content">
    <div class="row">
        <div class="col-xs-12 col-sm-10 col-md-6">
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <img src="@Url.Content("~/Areas/One/Content/UserImage/" + @Model.ImagePath)"
                         class="profile-user-img img-responsive img-circle"
                         alt="User Image" />
                    <h3 class="profile-username text-center">@Model.FullName</h3>
                    <p class="text-muted text-center">@Model.Designation</p>
                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            Status
                            <b class="pull-right">@Model.Status</b>
                        </li>
                        <li class="list-group-item">
                            Email
                            <b class="pull-right">@Model.Email</b>
                        </li>
                        <li class="list-group-item">
                            Contact No.
                            <b class="pull-right">@Model.PhoneNumber</b>
                        </li>
                        @if (User.IsInRole("Teacher"))
                        {
                            <li class="list-group-item">
                                IIT Profile
                                <span class="pull-right">
                                    <a href="@Model.ProfileLink" target="_blank" class="">Visit</a>
                                </span>
                            </li>
                        }
                        <li class="list-group-item text-center">
                            <span>
                                @Html.ActionLink("Change Password", "ChangePassword", "Manage", new { area="" }, null)
                            </span>
                        </li>
                    </ul>
                </div>
                <div class="box-footer text-center">
                    @Html.ActionLink("Back to Home", "Index", "Home", new { area = "" },
                        new { @class = "btn btn-primary btn-flat" })
                    @Html.ActionLink("Update Profile", "UserProfileEdit", "Account", new { area = "", id=Model.Id },
                        new { @class = "btn btn-primary btn-flat" })
                </div>
            </div>
        </div>
    </div>
</section>


