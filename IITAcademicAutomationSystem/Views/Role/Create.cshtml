@model IITAcademicAutomationSystem.Areas.One.Models.RoleCreateViewModel

@{
    ViewBag.Title = "Role";
}

<section class="content-header">
    <h1>Create User Role</h1>
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink(" Home", "Index", "Home", new { area = "" }, new { @class = "fa fa-home" })
        </li>
        <li>
            @Html.ActionLink("Roles", "Index", "Role", new { area = "" }, null)
        </li>
        <li class="active">Create</li>
    </ol>
</section>
<section class="content">
    @using (Html.BeginForm())
    {
        <div class="panel panel-default panel-sm">
            <div class="panel-heading panel-heading-sm">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group" style="margin-bottom: 0;">
                    <div class="row">
                        @Html.LabelFor(model => model.Name, "Role Name", htmlAttributes: new { @class = "col-xs-12 col-sm-2" })
                        <div class="col-xs-12 col-sm-4">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="col-xs-12 col-sm-12 col-sm-offset-2">
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <ul class="todo-list">
                        <li>
                            <input type="checkbox" value="" />
                            <span class="text">Controller1 - Action1</span>
                        </li>
                        <li>
                            <input type="checkbox" value="" />
                            <span class="text">Controller1 - Action2</span>
                        </li>
                        <li>
                            <input type="checkbox" value="" />
                            <span class="text">Controller1 - Action3</span>
                        </li>
                        <li>
                            <input type="checkbox" value="" />
                            <span class="text">Controller2 - Action1</span>
                        </li>
                        <li>
                            <input type="checkbox" value="" />
                            <span class="text">Controller2 - Action2</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="panel-footer panel-footer-sm">
                <div class="form-group">
                    <input type="submit" value="Create Role" class="btn btn-primary btn-flat" />
                    @Html.ActionLink("Cancel", "Index", "Role", new { area = "" }, new { @class = "btn btn-danger btn-flat" })
                </div>
            </div>
        </div>
            }
    </section>
@section Scripts {
    @Scripts.Render("~/jqueryval")
}