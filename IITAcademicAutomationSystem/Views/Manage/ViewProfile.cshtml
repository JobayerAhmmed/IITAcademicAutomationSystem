@model IITAcademicAutomationSystem.Models.ProfileViewModel

@{
    ViewBag.Title = "User Profile";
}

<section class="content-header">
    <h1>
        User profile
    </h1>
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink(" Home", "Index", "Base", new { area = "" }, new { @class = "fa fa-home" })
        </li>
        <li class="active">Profile</li>
    </ol>
</section>
<hr />
<section class="content">
    <div class="row">
        <div class="col-xs-12 col-sm-10 col-md-6">
            <div class="box box-default">
                <div class="box-body with-border">
                    <table class="table table-hover table-responsive table-bordered">
                        <tr>
                            <td>
                                Name
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.FullName)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Designation
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Designation)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Email
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Email)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Phone
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.PhoneNumber)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                IIT Profile
                            </td>
                            <td>
                                <a href="@Model.ProfileLink" class="btn btn-default btn-flat">Visit</a>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="box-footer text-center">
                    @Html.ActionLink("Back", "Index", "Base", new { area = "" }, new { @class = "btn btn-primary btn-flat" })
                    @Html.ActionLink("Edit", "Edit", "Manage", new { area = "" }, new { @class = "btn btn-primary btn-flat" })
                </div>
            </div>
        </div>
    </div>
</section>