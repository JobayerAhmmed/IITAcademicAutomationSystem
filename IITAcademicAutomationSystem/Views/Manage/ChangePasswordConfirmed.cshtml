@{
    ViewBag.Title = "Password Change Confirmed";
}

<section class="content-header">
    <h1>
        Password Change Confirmed
    </h1>
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink(" Home", "Index", "Home", new { area = "" }, new { @class = "fa fa-home" })
        </li>
        <li>
            @Html.ActionLink("Profile", "UserProfile", "Account", new { area = "", id = ViewBag.Id }, null)
        </li>
        <li>
            @Html.ActionLink("Change Password", "ChangePassword", "Manage", new { area = "" }, null)
        </li>
        <li class="active">
            Confirmed
        </li>
    </ol>
</section>
<hr />
<section class="content">
    <div class="row">
        <div class="col-xs-12 col-sm-10 col-md-6">
            <div class="box box-default">
                <div class="box-body">
                    The password has been successfully changed.
                </div>
                <div class="box-footer">
                    @Html.ActionLink("Back to Profile", "UserProfile", "Account", new { area = "", id=ViewBag.Id }, new { @class = "btn btn-primary btn-flat" })
                </div>
            </div>
        </div>
    </div>
</section>