<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    @Styles.Render("~/bootstrapcss")
    @Styles.Render("~/datatablecss")
    @Styles.Render("~/admincss")
    @Styles.Render("~/css")
    @Scripts.Render("~/modernizr")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

@if (Request.IsAuthenticated)
{
    <body class="hold-transition skin-blue fixed sidebar-mini">
        <div class="wrapper">
            <header class="main-header">
                @*<a href="http://www.iit.du.ac.bd/" class="logo" target="_blank">
                    <span class="logo-mini"><b>IIT</b> DU</span>
                    <span class="logo-lg"><b>IIT</b> DU</span>
                </a>*@
                <a href='@Url.Action("Index", "Home", new { area="" })' class="logo">
                    <span class="logo-mini"><strong>I I T</strong></span>
                    <span class="logo-lg"><strong>I I T</strong></span>
                </a>
                <nav class="navbar navbar-static-top" role="navigation">
                    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                        <span class="sr-only">Toggle navigation</span>
                    </a>
                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">
                            @if (User.Identity.IsAuthenticated)
                            {
                                @Html.Action("LoadProfile", "Account", new { area = "" })
                            }
                        </ul>
                    </div>
                </nav>
            </header>

            @Html.Action("SideMenu", "Account", new { area = "" })

            <div class="content-wrapper">
                @RenderBody()
            </div>

            <footer class="main-footer">
                    <div class="pull-right hiddden-xs">
                        @Html.ActionLink("About", "About", "Home", new { area="" }, null)
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </div>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <strong>2016 &copy; IIT</strong>
            </footer>
        </div>

        @Scripts.Render("~/jquery")
        @Scripts.Render("~/bootstrap")
        @RenderSection("scripts", required: false)
        @Scripts.Render("~/admin")

    </body>
}
else
{
    <body class="hold-transition skin-blue layout-top-nav">
        <div class="wrapper">

            <header class="main-header">
                <nav class="navbar navbar-static-top" role="navigation">
                    <div class="container">
                        <div class="navbar-header">
                            <span class="navbar-brand navbar-brand-iit text-center">
                                <strong>I I T</strong><br />
                                <span class="navbar-brand-sm">University of Dhaka</span>
                            </span>
                            
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                                <i class="fa fa-bars"></i>
                            </button>
                        </div>
                    </div>
                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">
                            @Html.Action("LoadProfile", "Account", new { area = "" })
                        </ul>
                    </div>
                </nav>
            </header>

            @Html.Action("SideMenu", "Account", new { area = "" })

            <div class="content-wrapper">
                @RenderBody()
            </div>

            <footer class="main-footer text-center">
                    <strong>2016 &copy; IIT</strong>
            </footer>
        </div>

        @Scripts.Render("~/jquery")
        @Scripts.Render("~/bootstrap")
        @RenderSection("scripts", required: false)
        @Scripts.Render("~/admin")

    </body>
}       
</html>
