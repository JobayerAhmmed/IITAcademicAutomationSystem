@model IITAcademicAutomationSystem.Models.ProfileViewModel

@if (Request.IsAuthenticated)
{
    <li class="dropdown user user-menu">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <img src="@Url.Content("~/Areas/One/Content/UserImage/" + @Model.ImagePath)" class="user-image" alt="">
            <span class="hidden-xs">@Model.FullName</span>
        </a>
        <ul class="dropdown-menu">
            <li class="user-header">
                <img src="@Url.Content("~/Areas/One/Content/UserImage/" + @Model.ImagePath)" class="img-circle" alt="User Image">
                <p>
                    @Model.FullName
                    <small>@Model.Designation</small>
                </p>
            </li>
            
                <li class="user-footer">
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="pull-left">
                        @Html.ActionLink("Profile", "UserProfile", "Account", new { area = "", id=Model.Id },
                            htmlAttributes: new { title = "Manage", @class = "btn btn-default btn-flat" })
                    </div>
                    <div class="pull-right">
                        <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat">Sign out</a>
                    </div>
                }
                </li>
        </ul>
    </li>
}
