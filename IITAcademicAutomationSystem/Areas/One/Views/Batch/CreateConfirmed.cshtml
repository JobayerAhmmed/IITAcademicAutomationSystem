@model IITAcademicAutomationSystem.Areas.One.Models.BatchCreateViewModel

@{
    ViewBag.Title = "Create Batch";
}

<section class="content-header">
    <h1>
        The following batch has been created successfully.
    </h1>
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink(" Home", "Index", "Home", new { area = "" }, new { @class = "fa fa-home" })
        </li>
        <li>
            @Html.ActionLink(Model.ProgramName, "Index", "Batch", new { area = "One", programId = Model.ProgramId }, null)
        </li>
        <li>
            @Html.ActionLink("Create", "Create", "Batch", new { area = "One", programId = Model.ProgramId }, null)
        </li>
        <li class="active">
            Confirmed
        </li>
    </ol>
</section>
<hr />
<section class="content">
    <div class="row">
        <div class="col-xs-12 col-sm-10 col-md-6">
            <div class="box box-primary">
                &nbsp;
                <div class="box-body with-border">
                    <table class="table table-hover table-responsive table-bordered">
                        <tr>
                            <td>
                                Program
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.ProgramName)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Batch
                            </td>
                            <td>
                                @Model.BatchNo
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="box-footer text-center">
                    @Html.ActionLink("Back to Batches", "Index", "Batch",
                        new { area = "One", programId = Model.ProgramId },
                        new { @class = "btn btn-primary btn-flat" })
                </div>
            </div>
        </div>
    </div>
</section>


