@model IITAcademicAutomationSystem.Areas.One.Models.BatchCoordinatorIndexViewModel

@{
    ViewBag.Title = Model.ProgramName + " " + Model.BatchNo;
}

<section class="content-header">
    <h1>
        @ViewBag.Title - Batch Coordinators
    </h1>
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink(" Home", "Index", "Home", new { area = "" }, new { @class = "fa fa-home" })
        </li>
        <li>
            @Html.ActionLink(Model.ProgramName, "Index", "Batch", new { area = "One", programId = Model.ProgramId }, null)
        </li>
        <li>
            @Html.ActionLink(Model.ProgramName + " " + Model.BatchNo, "Details", "Batch",
                new { area = "One", id = Model.BatchId }, null)
        </li>
        <li class="active">Coordinators</li>
    </ol>

</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-default">
                <div class="box-header text-right">
                    @Html.ActionLink("Assign Coordinator", "AssignCoordinator", "Batch",
                        new
                        {
                            area = "One",
                            batchId = Model.BatchId
                        },
                        new { @class = "btn btn-success btn-flat btn-lg" })
                </div>
                <div class="box-body">
                    <table id="batchCoordinators" class="table table-responsive table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th class="text-center">Semester</th>
                                <th class="text-center">Start Date</th>
                                <th class="text-center">End Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Coordinators)
                            {
                                <tr>
                                    <td>
                                        <span>
                                            <img src="@Url.Content("~/Areas/One/Content/UserImage/" + @item.ImagePath)"
                                                 class="img-responsive img-rounded img-sm"
                                                 alt="" />
                                            &nbsp;&nbsp;
                                            @item.Name
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        Semester @item.SemesterNo
                                    </td>
                                    <td class="text-center">
                                        @item.StartDate
                                    </td>
                                    <td class="text-center">
                                        @item.EndDate
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="box-footer">
                    @Html.ActionLink("Back to Batch", "Details", "Batch",
                        new { area = "One", id = Model.BatchId },
                        new { @class = "btn btn-primary btn-flat btn-lg" })
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/datatable")
    <script>
        $(function () {
            $("#batchCoordinators").DataTable({
                "paging": false,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": true
            });
        });
    </script>
}