@model IITAcademicAutomationSystem.Areas.One.Models.CourseContentViewModel

@{
    ViewBag.Title = "Upload Content";
}

<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink(" Home", "Index", "Home", new { area = "" }, new { @class = "fa fa-home" })
        </li>
        <li>
            @Html.ActionLink("Teaching Courses", "TeacherCourses", "Account", new { area = "" }, null)
        </li>
        <li class="active">Upload Content</li>
    </ol>

</section>
<hr />
<section class="content">
    <div class="row">
        <div class="col-xs-12 col-sm-10 col-md-6">
            <div class="box box-default">
                <div class="box-header with-border">
                </div>
                @using (Html.BeginForm("Upload", "CourseContent",
            FormMethod.Post, new { role = "form", area = "One", enctype = "multipart/form-data" }))
                {
                    <div class="box-body">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.CourseId)

                        <div class="form-group">
                            <div class="row edit">
                                <div class="col-xs-12 col-sm-6">
                                    @Html.LabelFor(model => model.ContentTitle,
                                        "Course Content File", htmlAttributes: new { @class = "" })
                                </div>
                                <div class="col-xs-12 col-sm-6">
                                    <input id="ContentTitle" name="file" type="file" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row edit">
                                <div class="col-xs-12 col-sm-12">
                                    @Html.ValidationMessageFor(model => model.ContentTitle, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-footer text-center">
                        <input type="submit" value="Submit" class="btn btn-primary btn-flat" />
                        @Html.ActionLink("Cancel", "TeacherCourses", "Account",
                            new { area = "" }, new { @class = "btn btn-danger btn-flat" })
                    </div>
                }
            </div>
        </div>
    </div>
</section>



@section Scripts {
    @Scripts.Render("~/jqueryval")
}