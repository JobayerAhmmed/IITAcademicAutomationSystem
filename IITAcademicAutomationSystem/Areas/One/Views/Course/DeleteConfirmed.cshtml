@{
    ViewBag.Title = "Delete Course";
}
<section class="content-header">
    <ol class="breadcrumb">
        <li>
            @Html.ActionLink(" Home", "Index", "Base", new { area = "" }, new { @class = "fa fa-home" })
        </li>
        <li><a href="#">@ViewBag.ProgramName</a></li>
        <li>
            @Html.ActionLink("Courses", "Index", "Course", new { area = "One", programId = ViewBag.ProgramId }, null)
        </li>
        <li class="active">Delete</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12 col-sm-10 col-md-6">
            <div class="box box-default">
                <div class="box-body">
                    The course has been deleted successfully.
                </div>
                <div class="box-footer">
                    @Html.ActionLink("Back to courses", "Index", "Course", new { area = "One", programId = ViewBag.ProgramId }, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
</section>
