@{
ViewBag.Title = "View Routine";
}

<script src='~/Areas/Two/Library/angular.min.js'></script>

<script src="~/Areas/Two/Scripts/Utility/Module/Utility.module.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/RoutineManagement/Module/RoutineManagement.module.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/RoutineManagement/Controller/ViewOrDownloadRoutine_tp.Controller.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/RoutineManagement/Factory/RoutineManagement.Factory.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/Utility/Factory/Utility.Factory.js" type="text/javascript"></script>

<div class="container-fluid">
    <div>
        <div ng-app="routineManagement_module" ng-controller="viewRoutine_controller">
            <div ng-cloak>
                <div ng-if="message.content!=''">
                    <div class="{{message.color}}">{{message.content}}</div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div>
                            <div class="col-sm-4">
                                <b>Program</b>
                                <div>
                                    <select class="form-control" ng-change="whenProgramIsSelected()" ng-model="selected.program" ng-options="program as program.name for program in selection.programs"></select>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div ng-show="selected.program.name">
                                    <b>Semester</b>
                                    <div>
                                        <select class="form-control" ng-change="whenSemesterIsSelected()" ng-model="selected.semester" ng-options="semester as semester.name for semester in selection.semesters"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <br />
                <div ng-if="selected.program.id && selected.semester.id">
                    <div ng-if="flag.isRoutineUploaded==false">
                        <h3>Routine Is Not Uploaded Yet</h3>
                    </div>
                    <div ng-if="flag.isRoutineUploaded==true">
                        <div class="row">
                            <div class="embed-responsive embed-responsive-16by9">
                                <iframe class="embed-responsive-item" src="{{selected.path}}" />
                            </div>
                        </div>
                    </div>
                </div>                    
            </div>
        </div>
    </div>
</div>











