@{
    ViewBag.Title = "Upload Academic Calendar";
}
<script src="~/Areas/Two/Library/jquery-2.0.2.min.js"></script>
<script src='~/Areas/Two/Library/angular.min.js'></script>

<script src="~/Areas/Two/Scripts/Utility/Module/Utility.module.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/AcademicCalendarManagement/Module/AcademicCalendarManagement.module.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/AcademicCalendarManagement/Controller/UploadAcademicCalendar.Controller.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/AcademicCalendarManagement/Factory/AcademicCalendarManagement.Factory.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/Utility/Factory/Utility.Factory.js" type="text/javascript"></script>
  



<div class="container-fluid">
    <div >
        <div ng-app="academicCalendarManagement_module" ng-controller="uploadAcademicCalendar_controller">
            <div ng-cloak>
                <div ng-if="message.content!=''">
                    <div class="{{message.color}}">{{message.content}}</div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div>
                            <div class="col-sm-4">
                                <b>Program</b>
                                <div>
                                    <select class="form-control" ng-change="whenProgramIsSelected()" ng-model="selected.program" ng-options="program as program.name for program in selection.programs"></select>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div ng-if="selected.program.id!=-1 && selected.program.id">
                                    <b>Semester</b>
                                    <div>
                                        <select class="form-control" ng-change="whenSemesterIsSelected()" ng-model="selected.semester" ng-options="semester as semester.name for semester in selection.semesters"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <br />
                <div class="row">
                    <div class="col-sm-12">
                        <div ng-if="flag.isAcademicCalendarAlreadyUploaded==true">
                            <div class="alert alert-info">
                                <h3>Academic Calendar Has Already Uploaded</h3>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-sm-12">
                        <div>
                            <div ng-show="flag.showUploadForm">
                                <div ng-show="flag.isAcademicCalendarAlreadyUploaded==false">
                                    <form novalidate name="f1" ng-submit="SaveFile()">
                                        <div style="color: red">{{Message}}</div>
                                        <div>
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="col-sm-4">
                                                        <div>
                                                            <b>Upload Academic Calendar</b>
                                                            <div>
                                                                <div class="btn btn-primary btn-sm">
                                                                    <input type="file" name="file" accept="application/pdf" onchange="angular.element(this).scope().selectFileforUpload(this.files)" required />
                                                                </div>
                                                                <span class="error" ng-show="(f1.file.$dirty || IsFormSubmitted) && f1.file.$error.required">Image required!</span>
                                                                <span class="error">{{FileInvalidMessage}}</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <br/>
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="col-sm-4">
                                                        <div>
                                                            <input type="submit" value="Submit" class="btn btn-primary" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div> 
                    </div>
                </div>
            </div>                
        </div>
    </div>
</div>











