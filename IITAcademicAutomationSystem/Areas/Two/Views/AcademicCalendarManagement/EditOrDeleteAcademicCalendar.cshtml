@{
    ViewBag.Title = "Delete Academic Calendar";
}
<script src='~/Areas/Two/Library/angular.min.js'></script>
<script src="~/Areas/Two/Scripts/Utility/Module/Utility.module.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/AcademicCalendarManagement/Module/AcademicCalendarManagement.module.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/AcademicCalendarManagement/Controller/EditOrDeleteAcademicCalendar.Controller.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/AcademicCalendarManagement/Factory/AcademicCalendarManagement.Factory.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/Utility/Factory/Utility.Factory.js" type="text/javascript"></script>

<div class="container-fluid">
    <div>
        <div ng-app="academicCalendarManagement_module" ng-controller="editOrDeleteAcademicCalendar_controller">
            <div ng-cloak>
                <div ng-if="message.content!=''">
                    <div class="{{message.color}}">{{message.content}}</div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div>
                            <div class="col-sm-4">
                                <b>Program</b>
                                <div>
                                    <select class="form-control" ng-change="whenProgramIsSelected()" ng-model="selected.program" ng-options="program as program.name for program in selection.programs"></select>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div ng-show="selected.program.name">
                                    <b>Semester</b>
                                    <div>
                                        <select class="form-control" ng-change="whenSemesterIsSelected()" ng-model="selected.semester" ng-options="semester as semester.name for semester in selection.semesters"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <br />
                <div ng-show="selected.program.id && selected.semester.id">
                    <div ng-if="flag.isAcademicCalendarUploaded==false">
                        <div class="alert alert-info">
                            <h3>No Academic File</h3>
                        </div>
                     </div>
                     <div ng-if="selection.files.academicCalendar.id">
                         <div ng-if="flag.isAcademicCalendarUploaded==true">
                             <div class="row">
                                 <div class="col-sm-12">
                                     <div class="col-sm-4"><b>Uploading Date - {{selection.files.academicCalendar.date}}</b></div>
                                     <div class="col-sm-4"><span><input type="button" class="btn btn-danger" value="Delete" ng-click="whenDeleteButtonClicked($index)"></span></div>
                                 </div>
                             </div>
                             <div class="row">
                                 <div class="embed-responsive embed-responsive-16by9">
                                     <iframe class="embed-responsive-item" src="{{selected.path}}" />
                                 </div>
                             </div>                             
                         </div>
                      </div>
                 </div>
            </div>
        </div>
    </div>
</div>











