@{
    ViewBag.Title = "Head";
}

    
<section>    
    <script src='~/Areas/Two/Library/angular.min.js'></script>

    <script src="~/Areas/Two/Scripts/Utility/Module/Utility.module.js" type="text/javascript"></script>
    <script src="~/Areas/Two/Scripts/ExamManagement/Module/ExaminationManagement.module.js" type="text/javascript"></script>
    <script src="~/Areas/Two/Scripts/ExamManagement/Controllers/CreateOrViewHead.Controller.js" type="text/javascript"></script>
    <script src="~/Areas/Two/Scripts/ExamManagement/Factory/Result.Factory.js" type="text/javascript"></script>
    <script src="~/Areas/Two/Scripts/Utility/Factory/Utility.Factory.js" type="text/javascript"></script>
    <div class="container-fluid">
        <div>
            <div ng-app="examinationManagement_module" ng-controller="viewOrCreateHead_controller">
                <div ng-cloak>
                    <br />
                    <div ng-if="message.content!=''">
                        <div class="{{message.color}}">{{message.content}}</div>
                    </div>
                    <div class="col-sm-12">
                        <div class="col-sm-4">
                            <div ng-show="!flag.isCreateHeadClicked">
                                <button type="button" class="btn btn-primary btn-md" ng-click="whenCreateHeadIsClicked()">Create Head</button>
                            </div>
                        </div>
                    </div>

                    <div ng-show="flag.isCreateHeadClicked">
                        <div>
                            <form name="headCreation" class="form-group" ng-submit="saveHead()" novalidate>
                                <div class="row">
                                    <div class="box">
                                        <div class="col-sm-12">
                                            <div class="col-sm-4">
                                                <b>Head Name:</b>
                                                <div>
                                                    <span><input type="text" id="head" name="head" class="form-control" ng-model="selected.headName" ng-change="checkIfHeadExist()" ng-minlength="5" ng-maxlength="20" ng-pattern="/^[A-z][A-z0-9_ ]*$/" required /></span>
                                                    <span style="color: #ff0000">
                                                        <b>
                                                            <span ng-show="headCreation.head.$error.required && headCreation.head.$dirty">Required</span>
                                                            <span ng-show="!headCreation.head.$error.minLength && !headCreation.head.$error.maxLength && headCreation.head.$error.pattern && headCreation.head.$dirty">Must start with a letter, and contain letters &amp; numbers,space and under score  only.</span>
                                                            <span ng-show="!headCreation.head.$error.required && (headCreation.head.$error.minlength || headCreation.head.$error.maxlength) && headCreation.head.$dirty">Head name must be between 5 and 20 characters.</span>
                                                            <span ng-show="flag.ifHeadAlreadyExist">Already exists</span>
                                                        </b>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </div>
                                
                                <br/>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="col-sm-4">
                                            <button type="submit" class="btn btn-primary" ng-disabled="!headCreation.$valid || flag.disableSubmitButton">Submit</button>
                                            <button type="button" class="btn btn-primary" ng-click="cancel()">Cancel</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="box">
                            <div class="col-sm-12">
                                <div class="col-sm-4">
                                    <div ng-if="selection.heads.length!=0">
                                        <h4>Current Heads</h4>
                                        <div ng-repeat="head in selection.heads">
                                            <ul class="list-group">
                                                <li class="list-group-item">{{head.name}}</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
    


    

