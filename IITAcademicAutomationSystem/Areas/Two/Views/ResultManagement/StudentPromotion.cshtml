
@{
    ViewBag.Title = "PromoteOrDemoteStudent";
}

<script src='~/Areas/Two/Library/angular.min.js'></script>

<script src="~/Areas/Two/Scripts/Utility/Module/Utility.module.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/ExamManagement/Module/ExaminationManagement.module.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/ExamManagement/Controllers/StudentPromotion.Controller.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/ExamManagement/Factory/Result.Factory.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/Utility/Factory/Utility.Factory.js" type="text/javascript"></script>

<div class="container-fluid">
    <div>
        <div ng-app="examinationManagement_module" ng-controller="StudentPromotion_Controller">
            <div ng-cloak>
                <br />
                <div>
                    <div ng-if="message.content!=''">
                        <div class="{{message.color}}">{{message.content}}</div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div>
                            <div class="col-sm-4">
                                <div><b>Program</b></div>
                                <div>
                                    <select class="form-control" ng-change="whenProgramIsSelected()" ng-model="selected.program" ng-options="program as program.name for program in selection.programs"></select>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div ng-show="selected.program.name">
                                    <div><b>Semester</b></div>
                                    <div>
                                        <select class="form-control" ng-change="whenSemesterIsSelected()" ng-model="selected.semester" ng-options="semester as semester.name for semester in selection.semesters"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div ng-if="selected.program.name && selected.semester.name">
                    <div>
                        <div ng-if="selection.studentInfo.length!=0">
                            <div>
                                <div>
                                    <h3>Clicking this button:</h3>
                                    <h4>For <b>BSSE/MSSE</b> - WIll Promote the Passed Student and Keep the Failed Student to Approriate Semester</h4>
                                    <h4>For <b>PGDIT/MIT</b> - WIll Promote the All Studets to Next Semester</h4>
                                </div>
                                <div>
                                    <input type="checkbox" ng-model="flag.haveIRead" />
                                    <b>I Have Read This  :</b>
                                </div>
                                <br />
                                <button type="button" class="btn btn-primary btn-block" ng-disabled="!flag.haveIRead" ng-click="whenOkButtonIsClicked()">Promote/Demote</button>
                                <br />
                            </div>
                            <br>
                            <div class="row">
                                <div>
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Class Roll</th>
                                                <th>Exam Roll</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="student in selection.studentInfo">
                                                <td>{{student.name}}</td>
                                                <td>{{student.examRoll}}</td>
                                                <td>{{student.classRoll}}</td>
                                                <td>
                                                    <span>
                                                        <h3 style="display: block; width: 100%;" class="label label-success" ng-if="student.isPassedAllCourses">Passed</h3>
                                                        <h3 style="display: block; width: 100%;" class="label label-danger" ng-if="!student.isPassedAllCourses">Failed</h3>
                                                    </span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




