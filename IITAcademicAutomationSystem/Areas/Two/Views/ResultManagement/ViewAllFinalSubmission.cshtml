
@{
ViewBag.Title = "ViewAllFinalSubmission";
}
<script src='~/Areas/Two/Library/angular.min.js'></script>

<script src="~/Areas/Two/Scripts/Utility/Module/Utility.module.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/ExamManagement/Module/ExaminationManagement.module.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/ExamManagement/Controllers/ViewAllFinalSubmission.Controller.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/ExamManagement/Factory/Result.Factory.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/Utility/Factory/Utility.Factory.js" type="text/javascript"></script>


<div class="container-fluid">
    <div>
        <div ng-app="examinationManagement_module" ng-controller="viewAllFinalSubmission_controller">
            <div ng-cloak>
                {{selection}}
                <br />
                <br />
                {{selected}}
                <br />
                <br />
                {{flag}}
                <div ng-if="message.content!=''">
                    <div class="{{message.color}}">{{message.content}}</div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div>
                            <div class="col-sm-4">
                                <div><b>Program</b></div>
                                <div>
                                    <select class="form-control" ng-change="whenProgramIsSelected()" ng-model="selected.program" ng-options="program as program.name for program in selection.programs"></select>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div ng-show="selected.program.name">
                                    <div><b>Semester</b></div>
                                    <div>
                                        <select class="form-control" ng-change="whenSemesterIsSelected()" ng-model="selected.semester" ng-options="semester as semester.name for semester in selection.semesters"></select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div ng-if="selected.program.id && selected.semester.id">
                    <div class="row">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Course Name</th>
                                        <th>Is Finally Submitted</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="course in selection.courseFinalSubmissionInfo">
                                        {{headMarks}}
                                        <td><b>{{course.courseName}}</b></td>
                                        <td>
                                            <div class="bg-success">
                                                <div ng-if="course.isFinallySubmitted">Finally Submitted</div>
                                            </div>
                                            <div class="bg-danger">
                                                <div ng-if="!course.isFinallySubmitted">Not Finally Submitted</div>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div>
                        <span><input type="button" class="btn btn-info" value="Process Result" ng-click="processResult()" ng-disabled="!flag.isAllCoursesFinallySubmitted"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

