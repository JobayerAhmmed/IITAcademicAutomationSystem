@{
    ViewBag.Title = "View Notice";
}

<script src='~/Areas/Two/Library/angular.min.js'></script>

<script src="~/Areas/Two/Scripts/Utility/Module/Utility.module.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/NoticeManagement/Module/NoticeManagement.module.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/NoticeManagement/Controller/ViewOrDownloadNotice_s.Controller.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/NoticeManagement/Factory/NoticeManagement.Factory.js" type="text/javascript"></script>
<script src="~/Areas/Two/Scripts/Utility/Factory/Utility.Factory.js" type="text/javascript"></script>


<div class="container-fluid">
    <div>
        <div ng-app="noticeManagement_module" ng-controller="viewNotice_controller">
            <div ng-cloak>
                <div ng-if="message.content!=''">
                    <div class="{{message.color}}">{{message.content}}</div>
                </div>
                <br />
                <div ng-if="selection.files.length!=0">
                    <div ng-show="!flag.isViewNoticeCliked">
                        <div class="box">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Uploading Date</th>
                                            <th>Title</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="notice in selection.files.notices">
                                            <td>{{notice.date}}</td>
                                            <td>
                                                <div>
                                                    <b>{{notice.title}}</b>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <input type="button" value="View" class="btn btn-primary" ng-click="viewNoticeFile(notice.path)" />
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                    
                </div>      
                             
        </div>
    </div>
</div>











